<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lizhenbo.planewar.GameActivity">

    <com.lizhenbo.view.GameView
        android:id="@+id/gameView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <ImageButton
        android:id="@+id/imagebtn_game_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@null"
        />
    <TextView
        android:id="@+id/textview_game_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imagebtn_game_pause"
        android:textSize="20sp"
        android:layout_marginLeft="2dp"
        android:text=":0"
        />




    <ImageButton
        android:id="@+id/imagebtn_game_bomb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_margin="2dp"
        android:background="@null"
        />
    <TextView
        android:id="@+id/textview_game_bombnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/imagebtn_game_bomb"
        android:layout_alignBaseline="@id/imagebtn_game_bomb"
        android:visibility="gone"
        android:text="x0"
        android:textSize="20sp"
        android:layout_marginLeft="2dp"
        />


</RelativeLayout>
