<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rank"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lizhenbo.planewar.RankActivity">

    <ImageView
        android:id="@+id/imageview_rank_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/layout_rank_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/rank_top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游戏排行榜"
            android:textSize="32sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/listview_rank"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_rank_title"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        >
    </ListView>

</RelativeLayout>
